<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/mylocation_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigation"
            android:padding="15dp"
            android:tint="@color/colorPrimaryPatrnous"/>

        <AutoCompleteTextView
            android:id="@+id/search_place"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="#00000000"
            android:backgroundTint="@color/colorPrimaryPatrnous"
            android:hint="Â¿Para donde vas?"
            android:imeOptions="actionSearch"
            android:inputType="textWebEditText"
            android:textColor="#000"
            android:textColorHighlight="@color/colorPrimaryPatrnous" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="#bbb"
            android:id="@+id/relative_btn_go_map">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="IR"
                android:textColor="#fff"
                android:backgroundTint="#00000000"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_go_map"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>